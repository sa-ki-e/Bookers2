<main>
        <p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>Sign up</h2>
      <form id="new_user" class="new_user" action="/users" accept-charset="UTF-8" method="post">
        <input name="utf8" type="hidden" value="✓"> 
        <input type="hidden" name="authenticity_token" value="71vATpPEdIETszi/jynxhTD2ZEaJ4U5wUdyDk5ouGv8jccOI8VSjwMMLysynBno3Fx6IJwy0PJcf/11jTXmPYw==">

      <%= form_with model: @user, url: user_registration_path, id: "new_user", class: "new_user" do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

  <!--名前のフォームを追加-->
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :email %><br>
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div><br>
        <div class="actions">
          <input type="submit" name="commit" value="Sign up" class="btn btn-sm  btn-success" data-disable-with="Sign up">
        </div>
      <% end %>
      </form>
      
      <div class="mt-2">
      <%= render "devise/shared/links" %><br>
      </div>
    </div>
  </div>
</div>
</main>
