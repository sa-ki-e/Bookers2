  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>


  <h2 class="mt-3">New book</h2>
   <% if book.errors.any? %>
     <%= book.errors.count %>error prohibited this obj from being saved:
     <ul>
       <% book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
    <% end %>

  <div class="form">
    <%= form_with model: book, local:true do |f| %>
    <div class="form-group">
      <p>Title</p>
      <%= f.text_field :title %><!--, class:"form-control", placeholder:"ショップ名" %-->
    </div>
    <div class="form-group">
      <p>Opinion</p>
      <%= f.text_area :body %><!--, class:"form-control", rows:"3", placeholder:"コメントここに" %>-->
    </div>
    <div class="form-group">
       <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      <!--元々は↑　　%= f.submit "Create Book" %-->
      <% end %>
    </div>
  </div>
</div>
