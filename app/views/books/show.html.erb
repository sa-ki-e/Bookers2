<h1>Books#show</h1>
<div>
  <%= link_to user_path(@user.id) do %>
    <% if @user.image.attached? %>
      <%= image_tag @user.image, size: "200×200" %>
    <% else %>
      <% image_tag "no_image.jpg", size: "200×200" %>
    <% end %>
    <br>
    <%= @user.name %>
  <% end %>
    
  <%= link_to @book.title, book_path(@book.id) %>
  <%= @book.body %>

</div>