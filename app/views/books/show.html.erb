<!--UserShow-->
<%= render "users/user_info", user: @user %>

<!--New-->
<%= render "new", book: @newbook %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>

	<table class="table">
		<tbody>
		  <tr>
		    <td>
          <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image(50,50) %>
            <%= @user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to @book.title, book_path(@book.id) %>
        </td>
        <td>
          <%= @book.body %>
         </td>
        <td>
          <%# if user_signed_in? && @book.user_id == current_user.id ???%>
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book.id) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book), method: :delete %>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>

  <!--ログイン中のuserであればここにeditとdestroyのリンクを表示-->
