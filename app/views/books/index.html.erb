<!--UserShow-->
<%= render "users/show", user: @user %>
<!--NewBook-->
<%= render "books/new", book: @book %>


<div class="col-md-8 offset-md-1">
<h2>Books</h2><!--Userの画像、Title、Opinion-->
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
       <% if book.user.profile_image.attached? %>
          <%= image_tag book.user.profile_image, size: "20×20" %>
        <% else %>
          <%= image_tag 'no_image', size: "80x80" %>
        <% end %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>
</div>