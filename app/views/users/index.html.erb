<%= render "show", user: @user %>
<!--NewBook-->
<%= render "books/new", book: @book %>

<h1>Users</h1>

<% @users.each do |user| %>
<div>
  <p>image</p>
    <% if user.image.attached? %>
      <%= image_tag user.image, size: "200×200" %>
    <% else %>
      <% image_tag "no_image.jpg", size: "200×200" %>
    <% end %>
  <p>name</p>
    <%= user.name %>
  <p><%= link_to "Show", user_path(user.id) %></p>
</div>
<% end %>