<div class="col-md-3">
<h2>User info</h2>

      <%= image_tag @user.get_profile_image(50,50) %>
    
<table class="table">
  <tbody>
    <tr>
    </tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
